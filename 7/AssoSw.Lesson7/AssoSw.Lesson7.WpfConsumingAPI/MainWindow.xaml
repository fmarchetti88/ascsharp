<Window x:Class="AssoSw.Lesson7.WpfConsumingAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssoSw.Lesson7.WpfConsumingAPI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Grid.Row="3" Grid.Column="3" Margin="20">
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Content="Email" Width="100"/>
                <TextBox Text="{Binding Email}" Width="300" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Content="Password" Width="100"/>
                <TextBox Text="{Binding Password}" Width="300" />
            </StackPanel>
            <StackPanel Margin="10">
                <Button Content="Login" Command="{Binding LoginCommand}" MaxWidth="100"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
